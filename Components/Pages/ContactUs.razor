@layout DogAdoptionWebsite.Components.Layout.MainLayout
@page "/contact"
@using DogAdoptionWebsite.Models


<h1>Contact Us</h1>



<style>
    h1 {
        font-size: 32px;
        text-align: center;
        color: #b5651d; /* Brick color */
        font-family: 'Georgia', serif;
        margin-top: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    body {
        background-color: #FFF9E3; /* Pale pastel yellow */
        color: #333333; /* Dark gray for text */
    }

    h3 {
        color: #C1440E; /* Brick color */
        margin-bottom: 20px;
    }

    p {
        font-size: 1.1rem;
        color: #333333;
        line-height: 1.6;
    }

    a {
        color: #C1440E;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: #A1360B; /* Slightly darker brick */
        }

    .contact-container {
        background-color: #FFF4DB; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    .contact-container p {
        margin-top: 10px;
     }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .form-control:focus {
        border-color: #C1440E;
        box-shadow: 0 0 5px rgba(194, 68, 14, 0.5);
    }

    .btn-submit {
        background-color: #C1440E;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
    }

    .btn-submit:hover {
        background-color: #A1360B;
     }
</style>

<div class="contact-container">
    <h3>Contact Us</h3>
    <p>
        If you have any questions or would like to get in touch, feel free to contact us!
    </p>
    <p>
        Email:
        <a href="mailto:support@dogadoptionwebsite.com">
            support@dogadoptionwebsite.com
        </a>
    </p>

    <!-- Contact Form -->
    <h4>Send Us a Message</h4>
    <EditForm Model="@messageModel" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="name">Your First Name:</label>
            <InputText id="name" class="form-control" @bind-Value="messageModel.FirstName" />
        </div>

        <div class="form-group">
            <label for="name">Your Last Name:</label>
            <InputText id="name" class="form-control" @bind-Value="messageModel.LastName" />
        </div>

        <div class="form-group">
            <label for="email">Your Email:</label>
            <InputText id="email" class="form-control" @bind-Value="messageModel.Email" />
        </div>

        <div class="form-group">
            <label for="subject">Subject:</label>
            <InputText id="subject" class="form-control" @bind-Value="messageModel.Subject" />
        </div>

        <div class="form-group">
            <label for="message">Message:</label>
            <InputTextArea id="message" class="form-control" @bind-Value="messageModel.Message" />
        </div>

        <button type="submit" class="btn-submit">Send Message</button>
    </EditForm>

</div>

@code {
    private SecureMessage messageModel = new SecureMessage();

    private void HandleSubmit()
    {
        //Change code to return message/form to a database for the admin??
        Console.WriteLine("Message Sent");

    } 
}