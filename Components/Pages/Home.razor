<style>
    /* Tab bar styling */
    .tab {
        overflow: hidden;
        border: 2px solid #6b8e23; /* Olive border */
        background-color: #f9f9f9; 
        border-radius: 8px; 
        margin-bottom: 20px; 
    }

    .tablink {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
        font-size: 17px;
        text-decoration: none;
        color: black; 
        font-family: 'Georgia', serif;
    }

    .tablink:hover, .active-tab {
        background-color: #808080; 
        color: wheat; /* Hover effect */
        border-radius: 4px; 
    }
