@page "/volunteers/delete"
@using Microsoft.EntityFrameworkCore
@using DogAdoptionWebsite.Models
@inject IDbContextFactory<DogAdoptionWebsite.Data.DogAdoptionWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Volunteer</h2>
    <hr />
    @if (volunteer is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@volunteer.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@volunteer.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Availability</dt>
            <dd class="col-sm-10">@volunteer.Availability</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Skills</dt>
            <dd class="col-sm-10">@volunteer.Skills</dd>
        </dl>
        <EditForm method="post" Model="volunteer" OnValidSubmit="DeleteVolunteer" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(volunteer is null)">Delete</button> |
            <a href="/volunteers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Volunteer? volunteer;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        volunteer = await context.Volunteer.FirstOrDefaultAsync(m => m.Id == Id);

        if (volunteer is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteVolunteer()
    {
        using var context = DbFactory.CreateDbContext();
        context.Volunteer.Remove(volunteer!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/volunteers");
    }
}
