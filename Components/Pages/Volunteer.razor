@page "/volunteer"
@inject DogAdoptionWebsite.Data.DogAdoptionWebsiteContext DbContext

    <style>
    /* Page Header Styling */
    h3 {
    font-size: 22px;
    text-align: center;
    color: #b5651d; /* Brick color */
    font-family: 'Georgia', serif;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    /* Subtitle styling */
    p {
        font-size: 12px;
        text-align: center;
        color: #b5651d; /* Brick color */
        font-family: 'Georgia', serif;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    /* volunteer Form Container */
    .volunteer-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 70vh;
    background-color: #fdf6e3; /* Pastel yellow background */
    padding: 20px;
    }

    /* Form Styling */
    .volunteer-form {
    width: 100%;
    max-width: 400px;
    background-color: #ffffff;
    border: 2px solid #6b8e23; /* Olive border */
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 30px;
    }

    .form-group {
    margin-bottom: 20px;
    }

    .form-group label {
    color: #333333; /* Dark gray text */
    }

<h3>Volunteer with Us</h3>

<p>We are always looking for passionate volunteers to help support our dogs and make a difference! If you're interested in volunteering, please fill out the form below.</p>

<h2>Encouraging you to Volunteer!</h2>
<p>Everything we do for our dogs in need requires a lot of groundwork. Anything you do will help us.
    Your duties are:
</p>
<ul>
    <li>Walking Dogs</li>
    <li>Giving the Dogs a bath</li>
    <li>Feeding and cleaning up after them</li>
    <li>Spend time with them</li>
    <li>Be sure to fill out the form completely if you are interested in helping your local shelter.</li>
</ul>

<EditForm Model="volunteerInfo" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

            <div class="form-group">
                <InputText id="name" class="form-control" @bind-Value="volunteerInfo.Name" placeholder="Full Name" />
                <label for="name">Full Name</label>
                <ValidationMessage For="@(() => volunteerInfo.Name)" />
            </div>

            <div class="form-group">
                <InputText type="email" id="email" class="form-control" @bind-Value="volunteerInfo.Email" placeholder="Email"/>
                <label for="email">Email Address</label>
                <ValidationMessage For="@(() => volunteerInfo.Email)" />
            </div>

            <div class="form-group">
                <InputText id="availability" class="form-control" @bind-Value="volunteerInfo.Availability" placeholder="Availability"/>
                <label for="availability">Availability</label>
                <ValidationMessage For="@(() => volunteerInfo.Availability)" />
            </div>

            <div class="form-group">
                <InputText id="skills" class="form-control" @bind-Value="volunteerInfo.Skills" placeholder="Skills"/>
                <label for="skills">Skills or Experience</label>
                <ValidationMessage For="@(() => volunteerInfo.Skills)" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </EditForm>
    </div>
</div>






@if (formSubmitted)
{
    <div class="alert alert-success mt-3">
        Thank you for your interest in volunteering! We will be in touch soon.
    </div>
}



