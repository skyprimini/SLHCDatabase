@page "/adoptionforms/delete"
@using Microsoft.EntityFrameworkCore
@using DogAdoptionWebsite.Models
@inject IDbContextFactory<DogAdoptionWebsite.Data.DogAdoptionWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>AdoptionForm</h2>
    <hr />
    @if (adoptionform is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FirstName</dt>
            <dd class="col-sm-10">@adoptionform.FirstName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastName</dt>
            <dd class="col-sm-10">@adoptionform.LastName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@adoptionform.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@adoptionform.Age</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CurrentNumberOfPets</dt>
            <dd class="col-sm-10">@adoptionform.CurrentNumberOfPets</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EmploymentStatus</dt>
            <dd class="col-sm-10">@adoptionform.EmploymentStatus</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EmployeePhoneNumber</dt>
            <dd class="col-sm-10">@adoptionform.EmployeePhoneNumber</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PetName</dt>
            <dd class="col-sm-10">@adoptionform.PetName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PetBreed</dt>
            <dd class="col-sm-10">@adoptionform.PetBreed</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PetAge</dt>
            <dd class="col-sm-10">@adoptionform.PetAge</dd>
        </dl>
        <EditForm method="post" Model="adoptionform" OnValidSubmit="DeleteAdoptionForm" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(adoptionform is null)">Delete</button> |
            <a href="/adoptionforms">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private AdoptionForm? adoptionform;

    [SupplyParameterFromQuery]
    private int AdoptionId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        adoptionform = await context.AdoptionForm.FirstOrDefaultAsync(m => m.AdoptionId == AdoptionId);

        if (adoptionform is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteAdoptionForm()
    {
        using var context = DbFactory.CreateDbContext();
        context.AdoptionForm.Remove(adoptionform!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/adoptionforms");
    }
}
