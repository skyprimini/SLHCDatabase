@page "/securemessages/delete"
@using Microsoft.EntityFrameworkCore
@using DogAdoptionWebsite.Models
@inject IDbContextFactory<DogAdoptionWebsite.Data.DogAdoptionWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>SecureMessage</h2>
    <hr />
    @if (securemessage is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FirstName</dt>
            <dd class="col-sm-10">@securemessage.FirstName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastName</dt>
            <dd class="col-sm-10">@securemessage.LastName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@securemessage.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Subject</dt>
            <dd class="col-sm-10">@securemessage.Subject</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Message</dt>
            <dd class="col-sm-10">@securemessage.Message</dd>
        </dl>
        <EditForm method="post" Model="securemessage" OnValidSubmit="DeleteSecureMessage" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(securemessage is null)">Delete</button> |
            <a href="/securemessages">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private SecureMessage? securemessage;

    [SupplyParameterFromQuery]
    private int SecureMessageId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        securemessage = await context.SecureMessage.FirstOrDefaultAsync(m => m.SecureMessageId == SecureMessageId);

        if (securemessage is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSecureMessage()
    {
        using var context = DbFactory.CreateDbContext();
        context.SecureMessage.Remove(securemessage!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/securemessages");
    }
}
